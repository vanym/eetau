{
    "name": "EET Addons & Utils",
    "short_name": "EETAU",
    "version": "1.1.3",
    "description": "Some addons and utils for Twitch viewers.",
    "icons": {
        "128": "icon_128.png"
    },
    "manifest_version": 2,
    "background": {
        "persistent": false,
        "scripts": [
            "js/common.js", 
            "js/twitch/common.js", 
            "js/twitch/background.js"
        ]
    },
    "options_page": "options.html",
    "web_accessible_resources": [
        "js/twitch/content/web/*"
    ],
    "content_scripts": [
        {
            "js": [
                "js/common.js",
                "js/twitch/content/player_size.js"
            ],
            "matches": [ "*://*.twitch.tv/*" ],
            "run_at": "document_start"
        },
        {
            "js": [
                "js/twitch/common.js",
                "js/twitch/content/title.js",
                "js/twitch/content/web.js",
                "js/twitch/content/web_idle.js"
            ],
            "matches": [ "*://*.twitch.tv/*" ],
            "run_at": "document_idle"
        }
    ],
    "permissions": ["contextMenus", "storage", "tabs", "*://*.twitch.tv/*"]
}
